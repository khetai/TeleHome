
@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Category

<div id="main-content">
    <div class="card">
        <div class="container-fluid">
            <div class="title">Edit kateqoriya</div>
            <div class="content">
                <form method="post" action="~/Admin/EditCategory/@Model.CategoryId" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Kateqoriya</label>
                                <input type="text" class="form-control" required name="CategoryName" value="@Model.CategoryName">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Şəkil(.SVG)</label>
                                <input type="file" class="form-control" name="filephoto">
                            </div>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-success">Dəyişiklik et</button>
                </form>
            </div>
        </div>
    </div>
</div>




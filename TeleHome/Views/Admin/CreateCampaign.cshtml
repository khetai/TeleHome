@{
    ViewData["Title"] = "CreateCampaign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<DeepCategory>

<div id="main-content">
    <div class="card">
        <div class="container-fluid">
            <div class="title">Yeni kampaniya</div>
            <div class="content">
                <form method="post" action="/Admin/CreateCampaign" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Kampaniya ad</label>
                                <input type="text" class="form-control" required name="CampaignName">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Kampaniya açıqlama</label>
                                <textarea class="form-control" required name="CampaignDescription"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Başlama vaxtı</label>
                                <input type="date" class="form-control" required name="CampaignStartDate">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Bitmə vaxtı</label>
                                <input type="date" class="form-control" required name="CampaignEndDate">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Şəkil</label>
                                <input type="file" class="form-control" required name="formFile">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Brend</label>
                                <select class="form-control" id="deepid" data-live-search="true" name="CampaignDeepCategoryId">
                                    @foreach (var item in Model)
                                    {
                                        <option data-tokens="@item.DeepCategoryName" value="@item.DeepCategoryId">@item.DeepCategoryName</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Əlavə et</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Style{
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
}

@section Scripts{
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js" type="text/javascript"></script>
    @*<script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/1.8/js/bootstrap-switch.min.js" type="text/javascript"></script>*@
    <script>
        $(document).ready(function () {
            $('#deepid').selectpicker();

        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>


}



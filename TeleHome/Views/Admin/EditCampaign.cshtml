
@{
    ViewData["Title"] = "EditCampaign";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Campaign

<div id="main-content">
    <div class="card">
        <div class="container-fluid">
            <div class="title">Kampaniya redaktə</div>
            <div class="content">
                <form method="post" action="/Admin/EditCampaign/@Model.CampaignId" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Kampaniya ad</label>
                                <input type="text" class="form-control" asp-for="CampaignName" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Kampaniya açıqlama</label>
                                <textarea class="form-control" required asp-for="CampaignDescription"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Başlama vaxtı</label>
                                <input type="date" class="form-control" required asp-for="CampaignStartDate">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Bitmə vaxtı</label>
                                <input type="date" class="form-control" required asp-for="CampaignEndDate" >
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Şəkil</label>
                                <input type="file" class="form-control" name="formFile">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Brend</label>
                                <select class="form-control" id="deepid" data-live-search="true" asp-items="ViewBag.DeepCategory" asp-for=CampaignDeepCategoryId >
                                   <option></option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Dəyişiklik et</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Style{
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
}

@section Scripts{
    <script src="//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $('#deepid').selectpicker();

        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>


}

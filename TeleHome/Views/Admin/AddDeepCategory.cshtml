
@{
    ViewData["Title"] = "AddDeepCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model List<SubCategory>

<div id="main-content">
    <div class="card">
        <div class="container-fluid">
            <div class="title">Yeni brend</div>
            <div class="content">
                <form method="post">
                    <div class="row">
                       
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Alt kateqoriyalar</label>
                                <select id="subCategory" class="form-control" name="DeepCategorySubCategoryId">
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.SubCategoryId">@item.SubCategoryName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Brend ad</label>
                                <input type="text" class="form-control" required name="DeepCategoryName">
                            </div>
                        </div>


                    </div>
                    <button type="submit" class="btn btn-success">Əlavə et</button>
                </form>
            </div>
        </div>
    </div>
</div>


